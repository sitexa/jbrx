<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../DataService.xsd">


    <SQLTrans TransFlag="1" TransName="followUploadUserPlatform" DataGroupId="writeUser">
        <SelectField OutputId="{count}">
            <OutputSQL>SELECT count(*) FROM uploadUserPlatform WHERE userId={userId} and platformId={platformId} </OutputSQL>
        </SelectField>
        <If Value1="{count}" Operator="!=" Type="Long" Value2="0">
            <Then>
                <Update>
                    <OutputSQL>update uploadUserPlatform set status=1,updateTime={currentTime} where userId={userId} and platformId={platformId}</OutputSQL>
                </Update>
            </Then>
            <Else>
                <SelectRecord OutputId="{platform}">
                    <OutputSQL>select * from platform where id={platformId}</OutputSQL>
                </SelectRecord>
                <Insert>
                    <OutputSQL>
                        insert into uploadUserPlatform (platformId,userId,name,day,descx,investMoney,shareMoney,url,status,createTime,updateTime)
                        values({platformId},{userId},{platform.name},{platform.day},{platform.descx},{platform.investMoney},{platform.shareMoney},{platform.url},1,{currentTime},{currentTime})
                    </OutputSQL>
                </Insert>
            </Else>
        </If>
        <OnException>
            <Return Code="-1" Info="上传平台异常" Text="上传平台异常"/>
        </OnException>
        <Return Code="0" Info="上传平台成功" Text="上传平台成功"/>
    </SQLTrans>

    <SQLTrans TransFlag="0" TransName="getUploadUserPlatformList" DataGroupId="readUser" >
        <SelectField OutputId="{totalCount}">
            <OutputSQL>select count(*) from uploadUserPlatform where status!=3 </OutputSQL>
            <SQLIf Value1="{platformName}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and name like '%{r:platformName}%'</OutputSQL></SQLThen>
            </SQLIf>
            <SQLIf Value1="{userId}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and userId = {r:userId} </OutputSQL></SQLThen>
            </SQLIf>
        </SelectField>
        <SelectRecordSet OutputId="{users}">
            <OutputSQL>select * from uploadUserPlatform where status!=3 </OutputSQL>
            <SQLIf Value1="{platformName}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and name like '%{r:platformName}%'</OutputSQL></SQLThen>
            </SQLIf>
            <SQLIf Value1="{userId}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and userId = {r:userId} </OutputSQL></SQLThen>
            </SQLIf>
            <OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
        </SelectRecordSet>
        <OnException>
            <Return Code="-1" Text="查询异常" Info="查询异常"></Return>
        </OnException>
        <Return Code="0" Text="查询成功" Info="查询成功">
            <ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
            <ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
            <ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
            <ReturnItem FieldId="{list}" ValueId="{users}"/>
        </Return>
    </SQLTrans>

</DataService>