[main]
#shiro.loginUrl =/dologin
shiro.loginUrl=/admin/login

#cache Manager
shiroCacheManager =com.www.mall.common.shiro.cache.ShiroCacheManager
securityManager.cacheManager = $shiroCacheManager


#CredentialsMatcher
credentialsMatcher=com.www.mall.common.shiro.handler.RetryLimitHashedCredentialsMatcher
credentialsMatcher.hashAlgorithmName=md5
credentialsMatcher.hashIterations=3
credentialsMatcher.storedCredentialsHexEncoded=true
#允许最大密码尝试次数
credentialsMatcher.allowRetryCount=10


#realm 自定义授权认证
loginAuth=com.www.mall.security.auth.LoginAuth
dbRealm=com.www.mall.security.shiro.ShiroDbRealm
dbRealm.credentialsMatcher=$credentialsMatcher
dbRealm.authorizationCacheName=shiro-authorizationCache
dbRealm.multiAuthenticator=$loginAuth
securityManager.realm=$dbRealm

#session 基于缓存 sessionDao
sessionDAO=org.apache.shiro.session.mgt.eis.EnterpriseCacheSessionDAO
sessionDAO.activeSessionsCacheName=shiro-active-session

# 设置sessionCookie
sessionIdCookie=org.apache.shiro.web.servlet.SimpleCookie
sessionIdCookie.name=uid
#sessionIdCookie.domain=demo.com
#sessionIdCookie.path=
#cookie最大有效期-单位秒 默认30天
sessionIdCookie.maxAge=2592000
sessionIdCookie.httpOnly=true

#设置会话管理
sessionManager=org.apache.shiro.web.session.mgt.DefaultWebSessionManager
sessionManager.sessionDAO=$sessionDAO
sessionManager.sessionIdCookie=$sessionIdCookie
sessionManager.sessionIdCookieEnabled=true
securityManager.sessionManager=$sessionManager

#session过期时间，单位毫秒，默认2天
securityManager.sessionManager.globalSessionTimeout=172800000
webSessionListener=com.www.mall.common.shiro.WebSessionListener
securityManager.sessionManager.sessionListeners = $webSessionListener
securityManager.sessionMode =native

#统一帐号同时登录控制
#kick=com.rlax.lele.plugin.shiro.KickoutControlFilter
#kick.sessionManager=$sessionManager
#kick.cacheManager=$shiroCacheManager
#kick.maxSession=10

[filters]
#authc=com.xxx.support.shiro.MutiAuthenticationFilter

#处理中文乱码问题
character=com.www.mall.common.shiro.handler.CharacterEncodingFilter

[users]
#user1=123456,role-1
#user2=123456,role-2

[roles]
#role1=error


[urls]
/static/**  =anon
/admin/captcha=anon
/admin/login =  anon
/admin/singIn =  anon
/postLogin =  anon
/favicon.ico = anon
/**= anon
