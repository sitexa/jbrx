<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DataService.xsd">
	
	<!-- 新增菜单资源 -->
	<SQLTrans TransFlag="1" TransName="saveAction" DataGroupId="writeSystem">
		<SelectField OutputId="{count}">
			<OutputSQL>select count(id) from action where actionPath={actionPath} and menuId={menuId} and actionType={actionType}</OutputSQL>
		</SelectField>
		<If Value1="{count}" Type="Long" Operator="!=" Value2="0">
			<Then>
				<Return Code="1" Info="资源已存在" Text="资源已存在"/>
			</Then>
		</If>
		<Insert>
			<OutputSQL>insert into action (menuId,actionName,actionPath,actionType,actionCode,icon,state,sort,createTime) values({menuId},{actionName},{actionPath},{actionType},{actionCode|''},{icon|''},{state|1},{sort|0},{currentTime})</OutputSQL>
		</Insert>
		<OnException>
			<Return Code="-1" Info="新增菜单资源数据库异常" Text="新增菜单资源数据库异常"/>
		</OnException>
		<Return Code="0" Info="新增菜单资源成功" Text="新增菜单资源成功"/>
	</SQLTrans>
	
	<SQLTrans TransFlag="1" TransName="updateAction" DataGroupId="writeSystem">
		<Update>
			<OutputSQL>update action set actionName={actionName},actionPath={actionPath},actionType={actionType},actionCode={actionCode|''},icon={icon|''},state={state|1},sort={sort|0} where id={id}</OutputSQL>
		</Update>
		<OnException>
			<Return Code="-1" Info="修改菜单资源数据库异常" Text="修改菜单资源数据库异常"/>
		</OnException>
		<Return Code="0" Info="修改菜单资源成功" Text="修改菜单资源成功"/>
	</SQLTrans>	
	
	<!-- 分页查询菜单 -->
	<SQLTrans TransFlag="0" TransName="queryActionPage" DataGroupId="readSystem" >
		<SelectField OutputId="{totalCount}">
			<OutputSQL>select count(*) from action where 1=1 </OutputSQL>
			<SQLIf Value1="{name}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and name={name}</OutputSQL></SQLThen>
			</SQLIf>
			<SQLIf Value1="{menuId}" Type="Long" Operator="EXIST">
				<SQLThen><OutputSQL>  and menuId={menuId}</OutputSQL></SQLThen>
			</SQLIf>
		</SelectField>
		<SelectRecordSet OutputId="{actions}">
			<OutputSQL>select * from action where 1=1 </OutputSQL>
			<SQLIf Value1="{name}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL> and name={name}</OutputSQL></SQLThen>
			</SQLIf>
			<SQLIf Value1="{menuId}" Type="Long" Operator="EXIST">
				<SQLThen><OutputSQL>  and menuId={menuId}</OutputSQL></SQLThen>
			</SQLIf>			
			<OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询菜单信息异常" Info="ActionService.xml.queryPage(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询菜单信息成功" Info="查询菜单信息成功">
			<ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
			<ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
			<ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
			<ReturnItem FieldId="{actions}" ValueId="{actions}"/>
		</Return>
	</SQLTrans>	
	
	<SQLTrans TransFlag="0" TransName="queryActionById" DataGroupId="readSystem" >
		<SelectRecord OutputId="{action}">
			<OutputSQL>select * from action where id={id} </OutputSQL>
		</SelectRecord>
		<OnException>
			<Return Code="-1" Text="查询菜单信息异常" Info="ActionService.xml.queryById(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询菜单信息成功" Info="查询菜单信息成功">
			<ReturnItem FieldId="{action}" ValueId="{action}"/>
		</Return>
	</SQLTrans>		
</DataService>