<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DataService.xsd">
	
	<!-- 新增角色 -->
	<SQLTrans TransFlag="1" TransName="saveRole" DataGroupId="writeSystem">
		<SelectField OutputId="{count}">
			<OutputSQL>select count(id) from role where roleName={roleName}</OutputSQL>
		</SelectField>
		<If Value1="{count}" Type="Long" Operator="!=" Value2="0">
			<Then>
				<Return Code="1" Info="角色已存在" Text="角色已存在"/>
			</Then>
		</If>
		<Insert>
			<OutputSQL>insert into role (roleName,status,createTime) values({roleName},{status|1},{currentTime})</OutputSQL>
		</Insert>
		<OnException>
			<Return Code="-1" Info="新增角色数据库异常" Text="新增角色数据库异常"/>
		</OnException>
		<Return Code="0" Info="新增角色成功" Text="新增角色成功"/>
	</SQLTrans>
	
	<SQLTrans TransFlag="1" TransName="updateRole" DataGroupId="writeSystem">
		<Update>
			<OutputSQL>update role set roleName={roleName},status={status} where id={id}</OutputSQL>
		</Update>
		<OnException>
			<Return Code="-1" Info="修改角色数据库异常" Text="修改角色数据库异常"/>
		</OnException>
		<Return Code="0" Info="修改角色成功" Text="修改角色成功"/>
	</SQLTrans>	
	
	<!-- 分页查询角色 -->
	<SQLTrans TransFlag="0" TransName="queryRolePage" DataGroupId="readSystem" >
		<SelectField OutputId="{totalCount}">
			<OutputSQL>select count(*) from role where 1=1 </OutputSQL>
			<SQLIf Value1="{roleName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and roleName like '%{r:roleName}%'</OutputSQL></SQLThen>
			</SQLIf>
			<SQLIf Value1="{menuId}" Type="Long" Operator="EXIST">
				<SQLThen><OutputSQL>  and status={status}</OutputSQL></SQLThen>
			</SQLIf>
		</SelectField>
		<SelectRecordSet OutputId="{roles}">
			<OutputSQL>select * from role where 1=1 </OutputSQL>
			<SQLIf Value1="{roleName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and roleName like '%{r:roleName}%'</OutputSQL></SQLThen>
			</SQLIf>
			<SQLIf Value1="{menuId}" Type="Long" Operator="EXIST">
				<SQLThen><OutputSQL>  and status={status}</OutputSQL></SQLThen>
			</SQLIf>			
			<OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询角色信息异常" Info="RoleService.xml.queryPage(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询角色信息成功" Info="查询角色信息成功">
			<ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
			<ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
			<ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
			<ReturnItem FieldId="{list}" ValueId="{roles}"/>
		</Return>
	</SQLTrans>	
	
	<SQLTrans TransFlag="0" TransName="queryRoleById" DataGroupId="readSystem" >
		<SelectRecord OutputId="{role}">
			<OutputSQL>select * from role where id={id} </OutputSQL>
		</SelectRecord>
		<OnException>
			<Return Code="-1" Text="查询角色信息异常" Info="RoleService.xml.queryById(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询角色信息成功" Info="查询角色信息成功">
			<ReturnItem FieldId="{role}" ValueId="{role}"/>
		</Return>
	</SQLTrans>		
	
	<SQLTrans TransFlag="0" TransName="queryRoleByUser" DataGroupId="readSystem" >
		<SelectRecordSet OutputId="{roles}">
			<OutputSQL>select * from userRole where userId={empNo} and status=1</OutputSQL>
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询Admins信息异常" Info="AdminsService.xml.queryMenuByUser(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Admins信息成功" Info="查询Admins信息成功">
			<ReturnItem FieldId="{list}" ValueId="{roles}"/>
		</Return>
	</SQLTrans>	
</DataService>