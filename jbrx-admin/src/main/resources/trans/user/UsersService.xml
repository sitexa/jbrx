<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DataService.xsd">
	
	<!-- 新增Users -->
	<SQLTrans TransFlag="1" TransName="saveUsers" DataGroupId="writeUser">
		<SelectField OutputId="{count}">
			<OutputSQL>select count(id) from users where userName={userName}</OutputSQL>
		</SelectField>
		<If Value1="{count}" Type="Long" Operator="!=" Value2="0">
			<Then>
				<Return Code="1" Info="用户名已存在" Text="用户名已存在"/>
			</Then>
		</If>
		<Insert>
			<OutputSQL>
				insert into users (userName,nickName,mobilePhone,idCard,avatar,email,passwords,salt,status,lockTime,updateTime,createTime) 
				values({userName},{nickName},{userName},{userName},{avatar|''},{email|''},{passwords},{salt},{status|1},{currentTime},{updateTime},{currentTime})
			</OutputSQL>
		</Insert>
		<OnException>
			<Return Code="-1" Info="系统异常(n1)" Text="系统异常(n1)"/>
		</OnException>
		<Return Code="0" Info="注册成功" Text="注册成功"/>
	</SQLTrans>
	
	<SQLTrans TransFlag="1" TransName="updateUsers" DataGroupId="writeUser">
		<Update>
			<OutputSQL>update users set usersName={usersName},status={status} where id={id}</OutputSQL>
		</Update>
		<OnException>
			<Return Code="-1" Info="修改Users数据库异常" Text="修改Users数据库异常"/>
		</OnException>
		<Return Code="0" Info="修改Users成功" Text="修改Users成功"/>
	</SQLTrans>	
	
	<!-- 分页查询Users -->
	<SQLTrans TransFlag="0" TransName="queryUsersPage" DataGroupId="readUser" >
		<SelectField OutputId="{totalCount}">
			<OutputSQL>select count(*) from users where 1=1 </OutputSQL>
			<SQLIf Value1="{usersName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and usersName like '%{r:usersName}%'</OutputSQL></SQLThen>
			</SQLIf>
		</SelectField>
		<SelectRecordSet OutputId="{userss}">
			<OutputSQL>select * from users where 1=1 </OutputSQL>
			<SQLIf Value1="{usersName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and usersName like '%{r:usersName}%'</OutputSQL></SQLThen>
			</SQLIf>			
			<OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询Users信息异常" Info="UsersService.xml.queryPage(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Users信息成功" Info="查询Users信息成功">
			<ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
			<ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
			<ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
			<ReturnItem FieldId="{list}" ValueId="{userss}"/>
		</Return>
	</SQLTrans>	
	
	<SQLTrans TransFlag="0" TransName="queryUsersById" DataGroupId="readUser" >
		<SelectRecord OutputId="{users}">
			<OutputSQL>select * from users where id={id} </OutputSQL>
		</SelectRecord>
		<OnException>
			<Return Code="-1" Text="查询Users信息异常" Info="UsersService.xml.queryById(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Users信息成功" Info="查询Users信息成功">
			<ReturnItem FieldId="{users}" ValueId="{users}"/>
		</Return>
	</SQLTrans>		
	
	<SQLTrans TransFlag="0" TransName="queryUsersByName" DataGroupId="readUser" >
		<SelectRecord OutputId="{users}">
			<OutputSQL>select * from users where userName={userName} </OutputSQL>
		</SelectRecord>
		<OnException>
			<Return Code="-1" Text="查询Users信息异常" Info="UsersService.xml.queryUsersByName(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Users信息成功" Info="查询Users信息成功">
			<ReturnItem FieldId="{users}" ValueId="{users}"/>
		</Return>
	</SQLTrans>		
</DataService>