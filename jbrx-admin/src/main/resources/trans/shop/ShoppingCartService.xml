<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DataService.xsd">
	
	<!-- 新增Shoppingcart -->
	<SQLTrans TransFlag="1" TransName="saveShoppingcart" DataGroupId="writeShop">
		<SelectField OutputId="{count}">
			<OutputSQL>select count(id) from shoppingcart where </OutputSQL>
		</SelectField>
		<If Value1="{count}" Type="Long" Operator="!=" Value2="0">
			<Then>
				<Return Code="1" Info="Shoppingcart已存在" Text="Shoppingcart已存在"/>
			</Then>
		</If>
		<Insert>
			<OutputSQL>insert into shoppingcart (id,shopId,goodsId,totalCount,status,createTime,updateTime,status,create_time) values({id},{shopId},{goodsId},{totalCount},{status},{createTime},{updateTime},{status|1},{currentTime})</OutputSQL>
		</Insert>
		<OnException>
			<Return Code="-1" Info="新增Shoppingcart数据库异常" Text="新增Shoppingcart数据库异常"/>
		</OnException>
		<Return Code="0" Info="新增Shoppingcart成功" Text="新增Shoppingcart成功"/>
	</SQLTrans>
	
	<SQLTrans TransFlag="1" TransName="updateShoppingcart" DataGroupId="writeShop">
		<Update>
			<OutputSQL>update shoppingcart set shoppingcartName={shoppingcartName},status={status} where id={id}</OutputSQL>
		</Update>
		<OnException>
			<Return Code="-1" Info="修改Shoppingcart数据库异常" Text="修改Shoppingcart数据库异常"/>
		</OnException>
		<Return Code="0" Info="修改Shoppingcart成功" Text="修改Shoppingcart成功"/>
	</SQLTrans>	
	
	<!-- 分页查询Shoppingcart -->
	<SQLTrans TransFlag="0" TransName="queryShoppingcartPage" DataGroupId="readShop" >
		<SelectField OutputId="{totalCount}">
			<OutputSQL>select count(*) from shoppingcart where 1=1 </OutputSQL>
			<SQLIf Value1="{shoppingcartName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and shoppingcartName like '%{r:shoppingcartName}%'</OutputSQL></SQLThen>
			</SQLIf>
		</SelectField>
		<SelectRecordSet OutputId="{shoppingcarts}">
			<OutputSQL>select * from shoppingcart where 1=1 </OutputSQL>
			<SQLIf Value1="{shoppingcartName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and shoppingcartName like '%{r:shoppingcartName}%'</OutputSQL></SQLThen>
			</SQLIf>			
			<OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询Shoppingcart信息异常" Info="ShoppingcartService.xml.queryPage(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Shoppingcart信息成功" Info="查询Shoppingcart信息成功">
			<ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
			<ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
			<ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
			<ReturnItem FieldId="{list}" ValueId="{shoppingcarts}"/>
		</Return>
	</SQLTrans>	
	
	<SQLTrans TransFlag="0" TransName="queryShoppingcartById" DataGroupId="readShop" >
		<SelectRecord OutputId="{shoppingcart}">
			<OutputSQL>select * from shoppingcart where id={id} </OutputSQL>
		</SelectRecord>
		<OnException>
			<Return Code="-1" Text="查询Shoppingcart信息异常" Info="ShoppingcartService.xml.queryById(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Shoppingcart信息成功" Info="查询Shoppingcart信息成功">
			<ReturnItem FieldId="{shoppingcart}" ValueId="{shoppingcart}"/>
		</Return>
	</SQLTrans>		
</DataService>