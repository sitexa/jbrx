<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DataService.xsd">
	
	<!-- 新增Shop -->
	<SQLTrans TransFlag="1" TransName="saveShop" DataGroupId="writeShop">
		<SelectField OutputId="{count}">
			<OutputSQL>select count(id) from shop where </OutputSQL>
		</SelectField>
		<If Value1="{count}" Type="Long" Operator="!=" Value2="0">
			<Then>
				<Return Code="1" Info="Shop已存在" Text="Shop已存在"/>
			</Then>
		</If>
		<Insert>
			<OutputSQL>insert into shop (id,userId,name,operationMode,shopMode,shopCategory,legalRepresent,province,city,county,street,address,lon,lat,shopPic,openTime,shopPhone,shopBriefs,shop_licensePic,overallScore,scoreDiscount,status,createTime,updateTime,status,create_time) values({id},{userId},{name},{operationMode},{shopMode},{shopCategory},{legalRepresent},{province},{city},{county},{street},{address},{lon},{lat},{shopPic},{openTime},{shopPhone},{shopBriefs},{shop_licensePic},{overallScore},{scoreDiscount},{status},{createTime},{updateTime},{status|1},{currentTime})</OutputSQL>
		</Insert>
		<OnException>
			<Return Code="-1" Info="新增Shop数据库异常" Text="新增Shop数据库异常"/>
		</OnException>
		<Return Code="0" Info="新增Shop成功" Text="新增Shop成功"/>
	</SQLTrans>
	
	<SQLTrans TransFlag="1" TransName="updateShop" DataGroupId="writeShop">
		<Update>
			<OutputSQL>update shop set shopName={shopName},status={status} where id={id}</OutputSQL>
		</Update>
		<OnException>
			<Return Code="-1" Info="修改Shop数据库异常" Text="修改Shop数据库异常"/>
		</OnException>
		<Return Code="0" Info="修改Shop成功" Text="修改Shop成功"/>
	</SQLTrans>	
	
	<!-- 分页查询Shop -->
	<SQLTrans TransFlag="0" TransName="queryShopPage" DataGroupId="readShop" >
		<SelectField OutputId="{totalCount}">
			<OutputSQL>select count(*) from shop where 1=1 </OutputSQL>
			<SQLIf Value1="{shopName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and shopName like '%{r:shopName}%'</OutputSQL></SQLThen>
			</SQLIf>
		</SelectField>
		<SelectRecordSet OutputId="{shops}">
			<OutputSQL>select * from shop where 1=1 </OutputSQL>
			<SQLIf Value1="{shopName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and shopName like '%{r:shopName}%'</OutputSQL></SQLThen>
			</SQLIf>			
			<OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询Shop信息异常" Info="ShopService.xml.queryPage(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Shop信息成功" Info="查询Shop信息成功">
			<ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
			<ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
			<ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
			<ReturnItem FieldId="{list}" ValueId="{shops}"/>
		</Return>
	</SQLTrans>	
	
	<SQLTrans TransFlag="0" TransName="queryShopById" DataGroupId="readShop" >
		<SelectRecord OutputId="{shop}">
			<OutputSQL>select * from shop where id={shopId} </OutputSQL>
		</SelectRecord>
		<OnException>
			<Return Code="-1" Text="查询Shop信息异常" Info="ShopService.xml.queryById(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Shop信息成功" Info="查询Shop信息成功">
			<ReturnItem FieldId="{shop}" ValueId="{shop}"/>
		</Return>
	</SQLTrans>		
	
	<SQLTrans TransFlag="0" TransName="queryHotShopList" DataGroupId="readShop" >
		<SelectField OutputId="{totalCount}">
			<OutputSQL>select count(*) from shop </OutputSQL>
		</SelectField>
		<SelectRecordSet OutputId="{shops}">
			<OutputSQL>select * from shop  limit {startIndex},{pageSize}</OutputSQL>	
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询Shop信息异常" Info="ShopService.xml.queryPage(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Shop信息成功" Info="查询Shop信息成功">
			<ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
			<ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
			<ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
			<ReturnItem FieldId="{list}" ValueId="{shops}"/>
		</Return>
	</SQLTrans>		
</DataService>