<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DataService.xsd">
	
	<!-- 新增Shopcoupon -->
	<SQLTrans TransFlag="1" TransName="saveShopcoupon" DataGroupId="writeShop">
		<SelectField OutputId="{count}">
			<OutputSQL>select count(id) from shopcoupon where </OutputSQL>
		</SelectField>
		<If Value1="{count}" Type="Long" Operator="!=" Value2="0">
			<Then>
				<Return Code="1" Info="Shopcoupon已存在" Text="Shopcoupon已存在"/>
			</Then>
		</If>
		<Insert>
			<OutputSQL>insert into shopcoupon (id,couponType,specialCan,shopId,goodsId,couponAmount,useWith,totalCount,takeCount,usedCount,effectiveDays,startTime,endTime,status,createTime,updateTime,status,create_time) values({id},{couponType},{specialCan},{shopId},{goodsId},{couponAmount},{useWith},{totalCount},{takeCount},{usedCount},{effectiveDays},{startTime},{endTime},{status},{createTime},{updateTime},{status|1},{currentTime})</OutputSQL>
		</Insert>
		<OnException>
			<Return Code="-1" Info="新增Shopcoupon数据库异常" Text="新增Shopcoupon数据库异常"/>
		</OnException>
		<Return Code="0" Info="新增Shopcoupon成功" Text="新增Shopcoupon成功"/>
	</SQLTrans>
	
	<SQLTrans TransFlag="1" TransName="updateShopcoupon" DataGroupId="writeShop">
		<Update>
			<OutputSQL>update shopcoupon set shopcouponName={shopcouponName},status={status} where id={id}</OutputSQL>
		</Update>
		<OnException>
			<Return Code="-1" Info="修改Shopcoupon数据库异常" Text="修改Shopcoupon数据库异常"/>
		</OnException>
		<Return Code="0" Info="修改Shopcoupon成功" Text="修改Shopcoupon成功"/>
	</SQLTrans>	
	
	<!-- 分页查询Shopcoupon -->
	<SQLTrans TransFlag="0" TransName="queryShopcouponPage" DataGroupId="readShop" >
		<SelectField OutputId="{totalCount}">
			<OutputSQL>select count(*) from shopcoupon where 1=1 </OutputSQL>
			<SQLIf Value1="{shopcouponName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and shopcouponName like '%{r:shopcouponName}%'</OutputSQL></SQLThen>
			</SQLIf>
		</SelectField>
		<SelectRecordSet OutputId="{shopcoupons}">
			<OutputSQL>select * from shopcoupon where 1=1 </OutputSQL>
			<SQLIf Value1="{shopcouponName}" Type="String" Operator="EXIST">
				<SQLThen><OutputSQL>  and shopcouponName like '%{r:shopcouponName}%'</OutputSQL></SQLThen>
			</SQLIf>			
			<OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
		</SelectRecordSet>
		<OnException>
			<Return Code="-1" Text="查询Shopcoupon信息异常" Info="ShopcouponService.xml.queryPage(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Shopcoupon信息成功" Info="查询Shopcoupon信息成功">
			<ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
			<ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
			<ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
			<ReturnItem FieldId="{list}" ValueId="{shopcoupons}"/>
		</Return>
	</SQLTrans>	
	
	<SQLTrans TransFlag="0" TransName="queryShopcouponById" DataGroupId="readShop" >
		<SelectRecord OutputId="{shopcoupon}">
			<OutputSQL>select * from shopcoupon where id={id} </OutputSQL>
		</SelectRecord>
		<OnException>
			<Return Code="-1" Text="查询Shopcoupon信息异常" Info="ShopcouponService.xml.queryById(i)"></Return>
		</OnException>
		<Return Code="0" Text="查询Shopcoupon信息成功" Info="查询Shopcoupon信息成功">
			<ReturnItem FieldId="{shopcoupon}" ValueId="{shopcoupon}"/>
		</Return>
	</SQLTrans>		
</DataService>