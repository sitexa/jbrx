<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../DataService.xsd">
	
	<!-- 查询分类 -->
	<SQLTrans TransName="queryCategorys" TransFlag="0" DataGroupId="readGoods">
		<SelectRecordSet OutputId="{categorys}">
			<OutputSQL>select * from category where status=1 order by level</OutputSQL>
		</SelectRecordSet>

		<OnException>
			<Return Code="-1" Info="查询商品分类失败" Text="查询商品分类失败"/>
		</OnException>
		<Return Code="0" Info="查询商品分类成功" Text="查询商品分类成功">
			<ReturnItem FieldId="{list}" ValueId="{categorys}"/>
		</Return>
	</SQLTrans>	
	
</DataService>