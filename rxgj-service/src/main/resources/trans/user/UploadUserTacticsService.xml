<?xml version="1.0" encoding="UTF-8"?>
<DataService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../DataService.xsd">


    <SQLTrans TransFlag="1" TransName="followUploadUserTactics" DataGroupId="writeUser">
        <SelectField OutputId="{count}">
            <OutputSQL>SELECT count(*) FROM uploadUserTactics WHERE userId={userId} and tacticsId={tacticsId} </OutputSQL>
        </SelectField>
        <If Value1="{count}" Operator="!=" Type="Long" Value2="0">
            <Then>
                <Update>
                    <OutputSQL>update uploadUserTactics set status=1,updateTime={currentTime} where userId={userId} and tacticsId={tacticsId}</OutputSQL>
                </Update>
            </Then>
            <Else>
                <SelectRecord OutputId="{tactics}">
                    <OutputSQL>select * from tactics where id={tacticsId}</OutputSQL>
                </SelectRecord>
                <Insert>
                    <OutputSQL>
                        insert into uploadUserTactics (tacticsId,userId,platformId,tacticsSn,name,minRate,maxRate,topRisk,day,status,createTime,updateTime)
                        values({tacticsId},{userId},{tactics.platformId},{tactics.tacticsSn},{tactics.name},{tactics.minRate},{tactics.maxRate},{tactics.topRisk},{tactics.day},1,{currentTime},{currentTime})
                    </OutputSQL>
                </Insert>
            </Else>
        </If>
        <OnException>
            <Return Code="-1" Info="上传策略异常" Text="上传策略异常"/>
        </OnException>
        <Return Code="0" Info="上传策略成功" Text="上传策略成功"/>
    </SQLTrans>

    <SQLTrans TransFlag="0" TransName="getUploadUserTacticsList" DataGroupId="readUser" >
        <SelectField OutputId="{totalCount}">
            <OutputSQL>select count(*) from uploadUserTactics where status!=3 </OutputSQL>
            <SQLIf Value1="{tacticsName}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and name like '%{r:tacticsName}%'</OutputSQL></SQLThen>
            </SQLIf>
            <SQLIf Value1="{userId}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and userId = {r:userId} </OutputSQL></SQLThen>
            </SQLIf>
        </SelectField>
        <SelectRecordSet OutputId="{users}">
            <OutputSQL>select * from uploadUserTactics where status!=3 </OutputSQL>
            <SQLIf Value1="{tacticsName}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and name like '%{r:tacticsName}%'</OutputSQL></SQLThen>
            </SQLIf>
            <SQLIf Value1="{userId}" Type="String" Operator="EXIST">
                <SQLThen><OutputSQL>  and userId = {r:userId} </OutputSQL></SQLThen>
            </SQLIf>
            <OutputSQL> limit {startIndex},{pageSize}</OutputSQL>
        </SelectRecordSet>
        <OnException>
            <Return Code="-1" Text="查询异常" Info="查询异常"></Return>
        </OnException>
        <Return Code="0" Text="查询成功" Info="查询成功">
            <ReturnItem FieldId="{pageNumber}" ValueId="{pageNumber}"/>
            <ReturnItem FieldId="{pageSize}" ValueId="{pageSize}"/>
            <ReturnItem FieldId="{totalCount}" ValueId="{totalCount}"/>
            <ReturnItem FieldId="{list}" ValueId="{users}"/>
        </Return>
    </SQLTrans>

</DataService>